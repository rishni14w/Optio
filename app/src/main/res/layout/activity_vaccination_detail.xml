<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vaccination_detail">


    <TextView
        android:id="@+id/vaccination_name_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/vaccination_name"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/vaccination_name_txt_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:text="@string/name_detail"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/vaccination_cause_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:text="@string/vaccination_cause"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/vaccination_cause_txt_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110dp"
        android:textSize="16sp"
        android:text="@string/cause_detail"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/date_given_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="160dp"
        android:text="@string/date_given"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/date_given_txt_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="190dp"
        android:textSize="16sp"
        android:text="@string/date_detail"
        android:layout_marginLeft="5dp"/>


</RelativeLayout>